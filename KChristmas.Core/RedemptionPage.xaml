<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ext="clr-namespace:KChristmas.Core.XamlExtensions"
             x:Class="KChristmas.Core.RedemptionPage"
             Appearing="ContentPage_Appearing"
             Title="Yaaaaay!">

    <ContentPage.Resources>
        <Style x:Key="RedemptionLabelStyle" TargetType="Label">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Scale" Value="2"/>
            <Setter Property="Margin" Value="0, 10, 0, 0"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="LineBreakMode" Value="WordWrap"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <Grid x:Name="ContentRoot" Padding="10" BackgroundColor="Transparent">
        <ScrollView>
            <Grid x:Name="AcceptGiftPanel">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackLayout HorizontalOptions="Center"
                             VerticalOptions="Center">

                    <Label x:Name="AcceptGiftPanelStep1"
                           Style="{StaticResource RedemptionLabelStyle}"
                           Text="This year, the gift is something a little abstract."/>

                    <Label x:Name="AcceptGiftPanelStep2"
                           Style="{StaticResource RedemptionLabelStyle}"
                           Text="It is NOT, as Bob Barker (rest in peace) from the game show The Price Is Right would say, 'A BRAND NYEW CAHHHH!'"/>

                    <Label x:Name="AcceptGiftPanelStep3"
                           Style="{StaticResource RedemptionLabelStyle}"
                           Text="It is, in fact, a donation of â‚¬400 toward your goal of A New Flute."/>

                    <Label x:Name="AcceptGiftPanelStep4"
                           Style="{StaticResource RedemptionLabelStyle}"
                           FontSize="Medium"
                           Margin="0, 20, 0, 0"
                           Text="(Payable immediately upon poking Neil.)"/>

                </StackLayout>
            </Grid>
        </ScrollView>

    </Grid>
</ContentPage>